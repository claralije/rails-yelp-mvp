<div class="wrapper">

<h1> Restaurants </h1>

</div>

<div class="container">
  <div class="row">
    <% @restaurants.each do |r| %>
      <div class="col col-lg-4 mb-3">
        <div class="card">
          <%= link_to "#{r.name}", restaurant_path(r[:id]) %>
        </div>

      </div>
    <% end %>
  </div>
</div>

<p> <%= link_to "Add new restaurant", new_restaurant_path, class: "btn btn-primary"%> </p>
