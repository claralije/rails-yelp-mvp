<div class="wrapper">

<h1> <%= @restaurant.name %></h1>

<div>

<p> <%= @restaurant.address %> </p>
<p> <%= @restaurant.category %> </p>
</div>

<div class="reviews">

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
    <li class="list-group-item"><%= review.rating %></li>
  <% end %>
</ul>

</div>

<div>
  <%= link_to "Edit the resto", edit_restaurant_path %>
  <%= link_to "write a review", new_restaurant_review_path(@restaurant) %>
  <%= link_to 'Back to list', restaurants_path %>
</div>
</div>




